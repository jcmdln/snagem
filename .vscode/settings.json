{
  // Associate files with languages when VSCode gets it wrong
  "files.associations": {
    // Ensure .dockerignore files in any subdir use .gitignore style
    "**/.dockerignore": "ignore",
    // Ensure .ini files use properties style
    "**/.ini": "properties",
  },
  // Hide these directories in the Explorer, and exclude from search
  "files.exclude": {
    "**/__pycache__/**": true,
    "**/.mypy_cache/**": true,
    "**/.pytest_cache/**": true,
    "**/.tox/**": true,
    "**/.venv/**": true,
  },
  // Format files on save
  "editor.formatOnSave": true,
  // Set editor minimap to 99 columns
  "editor.minimap.maxColumn": 99,
  // Set global wordwrap to 99 columns
  "editor.wordWrapColumn": 99,
  // Set toml columnWidth
  "evenBetterToml.formatter.columnWidth": 99,
  // Automatically sort keys in toml files
  "evenBetterToml.formatter.reorderKeys": true,
  // Use black as our default python formatter
  "python.formatting.provider": "black",
  // Enable linting using various tools
  "python.linting.enabled": true,
  "python.linting.banditEnabled": true,
  "python.linting.flake8Enabled": true,
  "python.linting.mypyEnabled": true,
  // flake8 already provides pycodestyle and pydocstyle warnings/errors
  "python.linting.pycodestyleEnabled": false,
  "python.linting.pydocstyleEnabled": false,
  // Sort python imports on save using isort
  "[python]": {
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    }
  },
  // Define specific yaml schemas where VSCode does the wrong thing
  "yaml.schemas": {
    "https://json.schemastore.org/github-workflow.json": [
      "${workspaceFolder}/.github/workflows/*.yml"
    ]
  },
}
